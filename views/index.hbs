                <form action="/" method="POST" >
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nombre y apellido</label>
                        <input type="nombre" name="nombre" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
